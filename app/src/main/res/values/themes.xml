<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Asclepius" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/orange_300</item>
        <item name="colorPrimaryVariant">@color/orange_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>

    </style>

    <style name="Theme.Asclepius" parent="Base.Theme.Asclepius" />

    <style name="OrangeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:background">@drawable/button_bg_orange</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OrangeOutlinedButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/orange_300</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:background">@drawable/button_bg_white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/orange_200</item>
    </style>
</resources>